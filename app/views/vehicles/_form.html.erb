<%= form_with(model: [:user, vehicle]) do |form| %>
  <% if vehicle.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% vehicle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :air_conditioning, style: "display: block" %>
    <%= form.check_box :air_conditioning %>
  </div>

  <div>
    <%= form.label :vehicle_type, style: "display: block" %>
    <%= form.select(:vehicle_type, options_for_select(Vehicle.vehicle_types.map {|k, v| [k.titleize, Vehicle.vehicle_types.key(v)]}, @vehicle.vehicle_type)) %>
  </div>

  <div>
    <%= form.label :consumption, style: "display: block" %>
    <%= form.text_field :consumption %>
  </div>

  <div>
    <%= form.label :nickname, style: "display: block" %>
    <%= form.text_field :nickname %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
